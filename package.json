{
  "name": "search-summary",
  "version": "0.0.0",
  "description": "Generate a search result string, supports ellipsis.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --p tsconfig.build.json",
    "prepublish": "npm run build",
    "test": "ts-mocha src/**/*.spec.ts",
    "typecheck": "tsc -w --noEmit",
    "format": "prettier --write src/**/*.ts"
  },
  "prettier": {
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyonenya/search-summary.git"
  },
  "keywords": [
    "search",
    "summary",
    "string",
    "typescript",
    "util"
  ],
  "author": "kyonenya <kyonenya.takashi@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kyonenya/search-summary#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.5.2"
  }
}
